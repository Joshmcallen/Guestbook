extends layout

block content
    h1 Welcome to My Guestbook!
    h3 Feel free to leave a message.
    form#formAddUser(name="adduser",method="post",action="/adduser")
        input#inputUserName.form-control(type="text", placeholder="What's your name?", name="username")
        input#inputUserEmail.form-control(type='text', placeholder='Got an email?', name='useremail')
        input#inputUserMessage.form-control(type='text', placeholder='Say something!', name="usermessage")
        button#addButton.btn.btn-success(type="submit") Create Log

    table#french.table.table-hover.table-inverse
      thead
        td  Name
        td  Email
        td  Message
        td
      tbody
        each user, i in userlist
          tr
            td
              a(href="/view/#{user.username}")=user.username
            td
              =user.email
            td
              =user.message
            td
              a(href="/#{user._id}")
                button#deleteButton.btn.btn-danger(type='button') Remove Entry
